{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "group": "build",
            "type": "shell",
            "options": {"cwd": "${workspaceFolder}"},
            "command": "make clean",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false,
                "clear": true
            },
        },
        {
            "label": "build",
            "type": "shell",
            "dependsOn": ["Clean"],
            "dependsOrder": "sequence",
            "command": "make",
            "args": [
                "-j${env:NUMBER_OF_PROCESSORS}"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {"cwd": "${workspaceFolder}"},
            "problemMatcher": {
                "owner": "java",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                        "regexp": "^(.*\\.java):(\\d+):\\s(error|warning):\\s(.*)$",
                        "file": 1,
                        "line": 2,
                        "severity": 3,
                        "message": 4
                    }
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}